{
    "name": "study-code-challenges",
    "version": "1.5.0",
    "description": "Study Code Challenges",
    "main": "index.js",
    "repository": "",
    "author": "Esteban Rocha <esteban@rocha.codes>",
    "license": "Proprietary",
    "private": true,
    "dependencies": {
        "@babel/core": "^7.17.5",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@typescript-eslint/eslint-plugin": "5.14.0",
        "@typescript-eslint/parser": "5.14.0",
        "autoprefixer": "^10.2.5",
        "chokidar": "^3.5.3",
        "esbuild": "0.14.25",
        "esbuild-plugin-glob": "^1.1.1",
        "esbuild-sass-plugin": "2.2.4",
        "eslint": "8.10.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-plugin-import": "^2.22.1",
        "node-css-mqpacker": "^9.0.0",
        "node-sass": "7.0.1",
        "pixrem": "^5.0.0",
        "postcss": "8.4.8",
        "postcss-custom-media": "^8.0.0",
        "postcss-preset-env": "7.4.2",
        "postcss-sorting": "7.0.1",
        "prettier": "^2.5.1",
        "sort-css-media-queries": "2.0.4",
        "stylelint": "14.5.3",
        "typescript": "^4.6.2"
    },
    "scripts": {
        "ts": "npx tsc"
    },
    "stylelint": {
        "rules": {
            "alpha-value-notation": "number",
            "at-rule-empty-line-before": [
                "always",
                {
                    "except": [
                        "blockless-after-same-name-blockless",
                        "first-nested"
                    ],
                    "ignore": [
                        "after-comment"
                    ],
                    "ignoreAtRules": [
                        "if",
                        "else",
                        "case",
                        "break"
                    ],
                    "severity": "error"
                }
            ],
            "at-rule-name-case": "lower",
            "block-no-empty": true,
            "color-hex-case": "lower",
            "color-named": "never",
            "color-no-invalid-hex": true,
            "comment-no-empty": true,
            "comment-whitespace-inside": "always",
            "declaration-bang-space-after": "never",
            "declaration-bang-space-before": "always",
            "declaration-block-no-duplicate-properties": [
                true,
                {
                    "ignore": [
                        "consecutive-duplicates-with-different-values"
                    ]
                }
            ],
            "declaration-block-no-shorthand-property-overrides": true,
            "declaration-colon-space-after": "always-single-line",
            "declaration-colon-space-before": "never",
            "declaration-empty-line-before": "never",
            "declaration-property-unit-disallowed-list": {
                "font-size": [
                    "%",
                    "em",
                    "px",
                    "vh"
                ],
                "size": [
                    "%",
                    "em",
                    "px",
                    "vh"
                ],
                "/^animation/": [
                    "ms"
                ],
                "height": [
                    "em",
                    "px"
                ],
                "flex-basis": [
                    "em",
                    "px"
                ],
                "line-height": [
                    "%",
                    "calc",
                    "clamp",
                    "em",
                    "px",
                    "rem",
                    "vh",
                    "vw"
                ],
                "max-height": [
                    "em",
                    "px"
                ],
                "min-height": [
                    "em",
                    "px"
                ],
                "max-width": [
                    "em",
                    "px"
                ],
                "min-width": [
                    "em",
                    "px"
                ],
                "width": [
                    "em",
                    "px",
                    "vh"
                ]
            },
            "declaration-no-important": true,
            "font-family-no-duplicate-names": true,
            "font-weight-notation": [
                "numeric",
                {
                    "ignore": [
                        "relative"
                    ]
                }
            ],
            "function-calc-no-invalid": true,
            "function-calc-no-unspaced-operator": true,
            "indentation": "tab",
            "length-zero-no-unit": [
                true,
                {
                    "ignore": [
                        "custom-properties"
                    ]
                }
            ],
            "linebreaks": "unix",
            "max-nesting-depth": 5,
            "media-feature-name-case": "lower",
            "media-feature-parentheses-space-inside": "never",
            "media-feature-range-operator-space-after": "always",
            "media-feature-range-operator-space-before": "always",
            "no-duplicate-at-import-rules": true,
            "no-empty-first-line": true,
            "no-empty-source": true,
            "no-extra-semicolons": true,
            "no-invalid-double-slash-comments": true,
            "no-unknown-animations": true,
            "number-leading-zero": "always",
            "number-no-trailing-zeros": true,
            "property-no-unknown": true,
            "property-no-vendor-prefix": true,
            "rule-empty-line-before": [
                "always-multi-line",
                {
                    "except": [
                        "first-nested"
                    ],
                    "ignore": [
                        "after-comment"
                    ]
                }
            ],
            "selector-attribute-brackets-space-inside": "never",
            "selector-max-class": 5,
            "selector-max-combinators": 3,
            "selector-max-compound-selectors": 4,
            "selector-max-id": 1,
            "selector-max-specificity": "1,3,0",
            "selector-max-type": 3,
            "selector-max-universal": 2,
            "selector-no-vendor-prefix": true,
            "selector-pseudo-class-case": "lower",
            "selector-pseudo-class-no-unknown": true,
            "selector-pseudo-element-case": "lower",
            "selector-pseudo-element-colon-notation": "double",
            "selector-pseudo-element-no-unknown": true,
            "selector-type-case": "lower",
            "selector-type-no-unknown": true,
            "shorthand-property-no-redundant-values": true,
            "string-no-newline": true,
            "unit-case": "lower",
            "unit-no-unknown": true,
            "value-keyword-case": "lower",
            "value-no-vendor-prefix": true
        },
        "ignoreFiles": [
            "**/*.html",
            "**/*.php",
            "**/*.js",
            "**/*.css",
            "**/module.css",
            "**/*.min.css",
            "**/node_modules/**",
            "**/vendor/**",
            "**/.pnp/",
            "**/.pnp*"
        ]
    }
}
