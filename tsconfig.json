{
	"compilerOptions": {
		"jsx": "react",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ScriptHost",
			"ES2021"
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "js/build",
		"preserveWatchOutput": true,
		"pretty": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ES2020",
		"watch": true
	},
	"typeAcquisition": {
		"include": [
			"jquery",
			"wordpress__dom",
			"wordpress__customize-browser"
		]
	},
	"include": [
		"js/src/**.ts"
	],
}
